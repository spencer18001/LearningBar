{
  "name": "Go + React TS Dev Container",
  "image": "mcr.microsoft.com/devcontainers/go:1.21",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "postCreateCommand": "if [ ! -d front ]; then npm create vite@latest front -- --template react-ts && cd front && npm install; fi",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [5173, 8080],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (Vite)",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Backend (Go)",
      "onAutoForward": "notify"
    }
  }
}
